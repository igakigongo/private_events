<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class='alert alert-danger' id="error_explanation" role='alert'>
      <h2><%= pluralize(user.errors.count, "error") %> prevented the sign up process from completing</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit('Save', class: 'btn btn-block btn-primary') %>
  </div>
<% end %>
